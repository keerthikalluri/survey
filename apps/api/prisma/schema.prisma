generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model SurveyResponse {
  id                Int         @id @default(autoincrement())
  name              String
  age               Int
  favoriteColor     String
  createdAt         DateTime @default(now())
  userId            Int
  user              User @relation(fields: [userId], references: [id])
}

model User {
  id              Int           @id @default(autoincrement())
  email           String        @unique
  password        String
  createdAt       DateTime      @default(now())
  responses       SurveyResponse[]
}